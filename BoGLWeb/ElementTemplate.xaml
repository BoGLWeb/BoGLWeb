<UserControl x:Class="AVL_Prototype_1.ElementTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AVL_Prototype_1"
             mc:Ignorable="d">
    <DockPanel Margin="5" Background="Transparent" MouseDown="ElementTemplate_MouseDown" Cursor="Hand" MouseEnter="ElementTemplate_MouseEnter" MouseLeave="ElementTemplate_MouseLeave">
        <Border BorderBrush="Transparent" Width="50" Height="50" BorderThickness="1.5">
            <Image x:Name="iconImage" RenderOptions.BitmapScalingMode="HighQuality"/><!--Width="50" Height="50"-->
        </Border>
    </DockPanel>
</UserControl>
